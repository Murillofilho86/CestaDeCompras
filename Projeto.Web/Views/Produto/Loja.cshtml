@model List<Projeto.Web.Models.ProdutoViewModelContulta>


@{
    ViewBag.Title = "Loja";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h4>Loja</h4>
<hr />

<p>
    @ViewBag.Mensagem
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 text-center">
            <div class="panel panel-success">
                <div class="panel-heading">
                    Produto em Oferta
                </div>
                <div class="panel-body">
                    <img src="/Images/@item.Foto" width="150" height="150" />
                    <br />

                    <strong>@item.Nome</strong>
                    <br />

                    <h4>@String.Format("{0:c}", item.Preco)</h4>
                </div>
                <div class="panel-footer">
                    @Html.ActionLink("Adicionar na Cesta", "Comprar",
                            new {id = item.IdProduto},
                            new {@class = "btn btn-success"})
                </div>
            </div>
        </div>    
    }

</div>
